<Window x:Class="Diego_P1_AP1.UI.Registro.rCiudades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diego_P1_AP1.UI.Registro"
        mc:Ignorable="d"
        Title="Registro de Ciudades" Height="380" Width="390">
    <Grid>
        <StackPanel Margin="10,0,0,0">
            <!--Ciudad id-->
            <StackPanel Orientation="Horizontal" Margin="25,10,0,0">
                <Label Content="Ciudad Id"/>
                <TextBox x:Name="CiudadIdTextBox" Margin="-50,30,0,0" Width="60"  Height="27"/>
                <Button x:Name="BuscarButton"  Margin="10,0,0,0" Width="80" Height="27" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Imagenes/Buscar.png" Height="20"/>
                        <Label Content = "buscar"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>